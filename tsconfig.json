{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "strict": true,
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "inlineSources": true,
    "skipLibCheck": true,
    "lib": [
      "es2015", "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "src/main.aot.ts"
  ]
}
